# ============================================
# Local Development Quick Setup
# ============================================
# This file shows minimal configuration for local testing
# Copy to .env and adjust as needed

# Server
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (using Docker Compose defaults)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/office_hours_matching?schema=public

# Redis (using Docker Compose defaults)
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate new ones for production!)
JWT_SECRET=dev-secret-key-change-in-production-12345678901234567890
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-12345678901234567890
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Airtable (optional for local testing)
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_TABLE_USERS=Users
AIRTABLE_TABLE_MENTORS=Mentors

# Email Service (optional for local testing)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM=noreply@capitalfactory.com
EMAIL_FROM_NAME=Capital Factory Office Hours

# AI Service (optional - matching will use fallback without it)
OPENAI_API_KEY=
AI_MODEL=gpt-4-turbo-preview

# Logging
LOG_LEVEL=debug
